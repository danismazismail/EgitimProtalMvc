@{
    ViewData["Title"] = "Create Classroom";
}
@model CreateClassroomVM

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Sınıf Ekle</h3>
            </div>
            <form asp-action="CreateClassroom">
                <div class="card-body">
                    <div>
                        <label asp-for="ClassroomName"></label>
                        <input asp-for="ClassroomName" class="form-control" placeholder="Lütfen sınıf adı giriniz..." />
                        <span asp-validation-for="ClassroomName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" placeholder="Lütfen açıklama giriniz..." />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="TeacherId"></label>
                        <select asp-for="TeacherId" class="form-control" asp-items="Model.Teachers" ></select>
                        <span asp-validation-for="TeacherId" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center" style="height:50px">
                    <a class="btn btn-outline-dark" asp-action="Index">Geri Dön</a>
                    <button type="submit" class="btn btn-outline-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
