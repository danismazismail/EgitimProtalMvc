@{
    ViewData["Title"] = "Create Student";
}
@model CreateStudentVM

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Öğrenci Ekle</h3>
            </div>
            <!--enctype="multipart/form-data" Formun içerisinde eğer ki dosya varsa bu kod kullanılır. Aksi halde dosyanız formun içerisinde gönderilmez. -->
            <form asp-action="CreateStudent" enctype="multipart/form-data">
                <div class="card-body">
                    <div class="d-flex">
                        <div class="mx-2">
                            <label asp-for="Image"></label>
                            <input id="uploadStudentImage" asp-for="Image" class="form-control" />
                            <span asp-validation-for="Image" class="text-danger"></span>
                        </div>
                        <div>
                            <img id="imageStudent" width="150" height="150" class="rounded-circle justify-content-center" src="~/img/noimage.jpg" />
                        </div>
                    </div>
                    <div>
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" placeholder="Lütfen isim giriniz..." />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" placeholder="Lütfen soyisim giriniz..." />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" placeholder="Lütfen e-mail giriniz..." />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="BirthDate"></label>
                        <input asp-for="BirthDate" class="form-control" type="date" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="ClassroomId"></label>
                        <select asp-for="ClassroomId" asp-items="Model.Classrooms" class="form-control"></select>
                        <span asp-validation-for="ClassroomId" class="text-danger"></span>
                    </div>

                </div>
                <div class="card-footer d-flex justify-content-between align-items-center" style="height:50px">
                    <a class="btn btn-outline-dark" asp-action="Index">Geri Dön</a>
                    <button type="submit" class="btn btn-outline-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
