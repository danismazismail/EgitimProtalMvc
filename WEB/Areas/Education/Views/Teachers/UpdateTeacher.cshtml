@{
    ViewData["Title"] = "Update Teacher";
}
@model UpdateTeacherVM

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Öğretmen Güncelle</h3>
            </div>
            <form asp-action="UpdateTeacher">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="AppUserID" />
                <div class="card-body">
                    <div>
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" placeholder="Lütfen isim giriniz..." />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" placeholder="Lütfen soyisim giriniz..." />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" placeholder="Lütfen e-mail giriniz..." />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="BirthDate"></label>
                        <input asp-for="BirthDate" class="form-control" type="date" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="HireDate"></label>
                        <input asp-for="HireDate" class="form-control" type="date" />
                        <span asp-validation-for="HireDate" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Course"></label>
                        <select asp-for="Course" asp-items="Model.Courses" class="form-control"></select>
                        <span asp-validation-for="Course" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center" style="height:50px">
                    <a class="btn btn-outline-dark" asp-action="Index">Geri Dön</a>
                    <button type="submit" class="btn btn-outline-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
