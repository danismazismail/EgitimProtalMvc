@{
    ViewData["Title"] = "Update Role";
}
@model UpdateRoleVM

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Rol Güncelle</h3>
            </div>
            <form asp-action="UpdateRole">
                <input type="hidden" asp-for="Id" />
                <div class="card-body">
                    <div>
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Lütfen rol adı giriniz..." />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center" style="height:50px">
                    <a class="btn btn-outline-dark" asp-action="Index">Geri Dön</a>
                    <button type="submit" class="btn btn-outline-success">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
