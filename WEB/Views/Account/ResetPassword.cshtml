@{
    ViewData["Title"] = "Reset Password";
}
@model ResetPasswordVM

<video autoplay muted loop id="bg-video" style="max-height:100%;">
    <source src="~/images/course-video.mp4" type="video/mp4" />
</video>

<div class="video-overlay header-text position-absolute ">
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-12">
                <!-- Login 6 - Bootstrap Brain Component -->
                <section class="p-3 p-md-4 p-xl-5" style="margin-top:100px">
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-12 col-md-9 col-lg-7 col-xl-6 col-xxl-5">
                                <div style="background:transparent;">
                                    <div class="p-3 p-md-4 p-xl-5">

                                        <form asp-action="ResetPassword">
                                            <input type="hidden" asp-for="Token" />
                                            <input type="hidden" asp-for="Email" />
                                            <div class="row gy-3 overflow-hidden">
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input type="password" class="form-control" style="background:transparent; color:white" asp-for="Password">
                                                        <label asp-for="Password" style="background:transparent; color:black" class="form-label">Yeni Şifre</label>
                                                        <span asp-validation-for="Password" style="background:transparent;" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-floating mb-3">
                                                        <input type="password" asp-for="CheckPassword" style="background:transparent; color:white" class="form-control">
                                                        <label asp-for="CheckPassword" style="background:transparent; color:black" class="form-label">Şifre Tekrar</label>
                                                        <span asp-validation-for="CheckPassword" style="background:transparent;" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="d-grid">
                                                        <button class="btn bsb-btn-2xl btn-outline-success" type="submit">Şifre Değiştir</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>

